                android:id="@+id/textView35"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="所在位置："
                android:textColor="@color/colorBlue" />

            <TextView
                android:id="@+id/tv_activity_address"
